</Layout>

<style>
	.legal-page {
		padding: calc(var(--nav-height, 72px) + 3rem) var(--page-padding, clamp(1.5rem, 4vw, 3rem)) 3rem;
		max-width: 960px;
		margin: 0 auto;
		box-sizing: border-box;
		display: flex;
		flex-direction: column;
		gap: 2rem;
	}

	header .eyebrow {
		text-transform: uppercase;
		letter-spacing: 0.25em;
		font-size: 0.8rem;
		color: #666;
		margin: 0;
	}

	header h1 {
		font-size: clamp(2rem, 3vw, 3rem);
		margin: 0.5rem 0;
	}

	.lead {
		font-size: 1.05rem;
		color: #3a3a3a;
		margin: 0;
	}

	section h2 {
		margin-bottom: 0.5rem;
		font-size: 1.2rem;
		text-transform: uppercase;
		letter-spacing: 0.1em;
	}

	p,
	ul {
		margin: 0;
		line-height: 1.7;
		color: #1f1f1f;
	}

	ul {
		padding-left: 1.25rem;
	}

	a {
		color: inherit;
		font-weight: 600;
	}
</style>
